<select id="AccountPreiod_getNextId" resultClass="java.lang.String">
<![CDATA[
    SELECT ltrim(to_char(Seq_T_VENDOR_ACCOUNT_PERIOD_Id.Nextval,'0000000000')) 
           AS Id 
    FROM dual
]]>
</select>

<insert id="AccountPreiod_insertAccountPreiod" parameterClass="accountPreiod" >
<![CDATA[
    INSERT INTO T_VENDOR_ACCOUNT_PERIOD (
            C_CODE, 
            STATE, 
            ACCOUNT_TYPE, 
            ACCOUNT_PERIOD, 
            PERIOD_START, 
            ACCOUNT_DAY, 
            SETTLEMENT_DAY, 
            MAX_MONEY, 
            REMINDER_DAY
        )
    VALUES (
            #commCode#,
            #state#,
            #accountType#,
            #accountPeriod#,
            #periodStart#,
            #accounDay#,
            #settlementDay#,
            #maxMoney#,
            #reminderDay#
    )
]]>
</insert>

<delete id="AccountPreiod_deleteAccountPreiod" parameterClass="string">
<![CDATA[
    DELETE  FROM  T_VENDOR_ACCOUNT_PERIOD WHERE C_CODE = #commCode#
]]>
</delete>    

<update id="AccountPreiod_updateAccountPreiod" parameterClass="accountPreiod">
    UPDATE T_VENDOR_ACCOUNT_PERIOD 
    SET
    	C_CODE = #commCode#
	<isNotEmpty prepend="," property="state">
            STATE = #state#
	</isNotEmpty>
	<isNotEmpty prepend="," property="accountType">
            ACCOUNT_TYPE = #accountType#
	</isNotEmpty>
	<isNotEmpty prepend="," property="accountPeriod">
            ACCOUNT_PERIOD = #accountPeriod#
	</isNotEmpty>
	<isNotEmpty prepend="," property="periodStart">
            PERIOD_START = #periodStart#
	</isNotEmpty>
	<isNotEmpty prepend="," property="accounDay">
            ACCOUNT_DAY = #accounDay#
	</isNotEmpty>
	<isNotEmpty prepend="," property="settlementDay">
            SETTLEMENT_DAY = #settlementDay#
	</isNotEmpty>
	<isNotEmpty prepend="," property="maxMoney">
            MAX_MONEY = #maxMoney#
	</isNotEmpty>
	<isNotEmpty prepend="," property="reminderDay">
            REMINDER_DAY = #reminderDay#
	</isNotEmpty>
    WHERE C_CODE = #commCode#
</update> 

