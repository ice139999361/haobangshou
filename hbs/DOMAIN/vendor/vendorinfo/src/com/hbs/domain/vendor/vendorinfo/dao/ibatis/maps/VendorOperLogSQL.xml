<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<!-- Always ensure to use the correct XML header as above! -->
<sqlMap namespace="Vendor_OperLog">
<typeAlias alias="operLog" type="com.hbs.domain.common.pojo.baseinfo.OperLog"/> 
<resultMap id="operLog_result" class="operLog">
    <result property="seqId" column="SEQID"/>
    <result property="operTime" column="OPER_TIME"/>
    <result property="staffId" column="STAFF_ID"/>
    <result property="staffName" column="STAFF_NAME"/>
    <result property="operType" column="OPER_TYPE"/>
    <result property="operObject" column="OPER_OBJECT"/>
    <result property="operKey" column="OPER_KEY"/>
    <result property="operContent" column="OPER_CONTENT"/>
    <result property="memo" column="MEMO"/>
</resultMap>


<insert id="Vendor_OperLog_insertOperLog" parameterClass="operLog" >
<![CDATA[
    INSERT INTO T_VENDOR_OPER_LOG (            
            OPER_TIME, 
            STAFF_ID, 
            STAFF_NAME, 
            OPER_TYPE, 
            OPER_OBJECT, 
            OPER_KEY, 
            OPER_CONTENT, 
            MEMO
        )
    VALUES (            
            #operTime#,
            #staffId#,
            #staffName#,
            #operType#,
            #operObject#,
            #operKey#,
            #operContent#,
            #memo#
    )
]]>
</insert>


<select id="Vendor_OperLog_findOperLog" resultMap="operLog_result" parameterClass="string">
<![CDATA[
    SELECT
            SEQID, 
            OPER_TIME, 
            STAFF_ID, 
            STAFF_NAME, 
            OPER_TYPE, 
            OPER_OBJECT, 
            OPER_KEY, 
            OPER_CONTENT, 
            MEMO
    FROM T_VENDOR_OPER_LOG WHERE SEQID = #seqId#
]]>
</select>

<select id="Vendor_OperLog_listOperLog" resultMap="operLog_result" parameterClass="operLog">
<![CDATA[
    SELECT
            SEQID, 
            OPER_TIME, 
            STAFF_ID, 
            STAFF_NAME, 
            OPER_TYPE, 
            OPER_OBJECT, 
            OPER_KEY, 
            OPER_CONTENT, 
            MEMO
    FROM T_VENDOR_OPER_LOG
]]>
<dynamic prepend="WHERE">
			<isNotEmpty prepend="and" property="operKey">
				OPER_KEY = #operKey#
			</isNotEmpty>			
			<isNotEmpty prepend="order by" property="sort">
                   $sort$
            </isNotEmpty>
            <isEmpty prepend="order by" property="sort">
                   <![CDATA[
                   	ORDER BY OPER_TIME DESC
                   ]]>
            </isEmpty>
            
		</dynamic>
		<![CDATA[
      		LIMIT #start# ,#end#
		]]>
		
</select>
<select id="Vendor_OperLog_listOperLogCount" resultClass="java.lang.Integer" parameterClass="String">
<![CDATA[
    SELECT COUNT(1)
    FROM T_VENDOR_OPER_LOG
]]>
		<dynamic prepend="WHERE">
			<isNotEmpty prepend="and" property="operKey">
				OPER_KEY = #operKey#
			</isNotEmpty>			
		</dynamic>
</select>
</sqlMap>